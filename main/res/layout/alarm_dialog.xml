<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/alarm_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose an alarm option:"
        android:textSize="18sp"
        android:paddingBottom="8dp"
        android:textStyle="bold" />

    <RadioGroup
        android:id="@+id/radio_group_alarm_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/radio_start_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Date" />

        <RadioButton
            android:id="@+id/radio_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="End Date" />

        <RadioButton
            android:id="@+id/radio_both_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Both Dates" />

    </RadioGroup>
</LinearLayout>